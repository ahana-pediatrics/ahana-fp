{
  "name": "@ahanapediatrics/ahana-fp",
  "version": "1.2.2",
  "description": "FP-friendly classes for Typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "private": false,
  "scripts": {
    "build": "tsc",
    "release": "standard-version",
    "lint": "tslint -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "test": "nyc mocha  --opts test/mocha.opts"
  },
  "keywords": [
    "FP",
    "Typescript"
  ],
  "author": "Dan Rumney <dan.rumney@ahanapediatrics.com>",
  "license": "MIT",
  "repository": "github:ohana-pediatrics/ahana-fp",
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "git-cz": "^3.3.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "files": [
    "lib/**/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "standard-version": "^7.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
